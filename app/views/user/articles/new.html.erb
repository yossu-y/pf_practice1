<h5>新規投稿</h5>

<%= form_with model: @article, url: "/articles" do |f| %>

  <div class="form-group">
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "題名" %>
    <%= f.text_field :title, placeholder: "記事タイトル" %>
  </div>
  
  <div class="form-group">
    <%= f.label :body, "内容" %>
    <%= f.text_area :body, placeholder: "記事内容" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "投稿" %>
  </div>

<% end %>

