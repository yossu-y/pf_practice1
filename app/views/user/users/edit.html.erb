<h5>マイページ編集画面</h5>

<%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <%= f.label :screen_name, "名前" %>
    <%= f.text_field :screen_name, class: "form-control name" %>
  </div>
  
  <div class="form-group">
    <%= f.label :image, "画像" %>
    <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
  </div>
  
  <div class="form-group">
    <%= f.label :introduction, "紹介文" %>
    <%= f.text_area :introductio, class: "form-control introduction" %>
  </div>
  
  <div class="form-group" align="right">
    <%= link_to "キャンセル", user_path(current_user), class: "back btn btn-light" %>
    <%= f.submit "保存", class: "btn btn-success" %>
  </div>

<% end %>